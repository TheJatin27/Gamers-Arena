            <form method="post" enctype="multipart/form-data">


                <div class="form_element" style="margin-top:100px">

                    <p>
                        Name Of Game
                    </p>

                    <input type="text" placeholder="Name Of Game" style="width:350px;" name="name_game">


                </div>



                <div class="form_element">

                    <p>
                        1 Video
