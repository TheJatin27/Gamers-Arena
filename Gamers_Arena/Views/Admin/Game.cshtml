                    <p>
                        Sale Price
                    </p>


                    <input type="Text" placeholder="Price" style="width:350px;" name="price">


                </div>

                <div class="form_element">

                    <p>
                        Orignal
                    </p>


                    <input type="Text" placeholder="Sale price" style="width:350px;" name="sale">


                </div>





                <div class="form_element">



                    <input type="submit" style="color: white; background-color:#ff7843; text-align: center; padding: 0px; width: 200px;">



