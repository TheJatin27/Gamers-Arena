        <div id="for">

            <h1>

                Add User


            </h1>

            <form method="post" enctype="multipart/form-data">


                <div class="form_element" style="margin-top:100px">

                    <p>
                        Name Of User
                    </p>

                    <input type="text" placeholder="Name Of User" style="width:350px;" name="name">


                </div>




                <div class="form_element" style="  margin-top:100px">

                    <p>
                        Username
                    </p>

                    <input type="text" placeholder="Username"style="width:350px;" name="username">


                </div>



                <div class="form_element" style="  margin-top:100px">

                    <p>
                        Email
                    </p>

                    <input type="email" placeholder="Name Of User" style="width:350px;" name="email">


                </div>




                <div class="form_element" style="  margin-top:100px">

                    <p>
                        user profile
                    </p>

                    <input type="file" style="width:300px;" name="profile">


                </div>



                <div class="form_element">

                    <p>
                        Password
                    </p>


                    <input type="password" placeholder="**********" style="width:350px;" name="pass">


                </div>



                <div class="form_element">



                    <input type="submit" style="color: white; background-color:#ff7843; text-align: center; padding: 0px; width: 200px;">



                </div>



            </form>

            <div style="width:100%; height:100px; margin-bottom:250px;">
            </div>


        </div>




        <br />
        <br />
