
@{
    ViewBag.Title = "add_user";
    Layout = "~/Views/Shared/Admin_Hedder.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="~/Content/Tecpile project/css/admin_user.css">
