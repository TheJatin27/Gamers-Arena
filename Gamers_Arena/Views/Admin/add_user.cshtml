        <table style="color: white; border: 2px solid white; margin: auto; padding: 5px;">

            <thead>
            <th style="color: white; border: 2px solid white; padding: 20pxs">
                SR
            </th>

            <th style="color: white; border: 2px solid white; padding: 20px">
                Name
            </th>



            <th style="color: white; border: 2px solid white; padding: 20px">
                email
            </th>


            <th style="color: white; border: 2px solid white; padding: 20px">
                username
            </th>


            <th style="color: white; border: 2px solid white; padding: 20px">
                profile
            </th>



            <th style="color: white; border: 2px solid white; padding: 20px">
                password
            </th>





            </thead>

         
                @{

                    if (ViewBag.data != null)
                    {


                        foreach (var r in ViewBag.data.Rows)
                        {

                            <tr>

                                <td style="border:  solid black; padding: 20px">
                                    @r[0]
                                
                                </td>



                                <td style="border:  solid black; padding: 20px">
                                    @r[1]
                                </td>


                                <td style="border: 2px solid black; padding: 20px">
                                    @r[2]
                                </td>


                                <td style="border: 2px solid black; padding: 20px">
                                    @r[3]
                                </td>



                                <td style="border: 2px solid black; padding: 20px">
                             <img src="~/Content/profile/@r[4]" width="50px" height="50px" />    
                                </td>



                                <td style="border: 2px solid black; padding: 20px">
                                    @r[5]
                                </td>



                                





                            </tr>





                        }

                    }

                }





          




        </table>



</body>

